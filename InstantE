<body>

<h1>ZeroFarmX - AI Content + Task Tracker</h1>
<p>Generate replies, blog content, captions instantly for earning.</p>

<textarea id="prompt" placeholder="Enter your prompt here..."></textarea>
<button onclick="run()">Generate</button>
<div id="out"></div>

<script>
async function run() {
  let userText=document.getElementById('prompt').value;
  if(!userText) return alert("Write something!");

  let r=await fetch("https://api.groq.com/openai/v1/chat/completions",{
    method:"POST",
    headers:{
      "Content-Type":"application/json",
      "Authorization":"Bearer YOUR_FREE_GROQ_KEY"
    },
    body:JSON.stringify({model:"llama3-8b-8192", messages:[{role:"user", content:userText}]})
  });

  let j=await r.json();
  document.getElementById('out').innerHTML=j.choices[0].message.content;
}
</script>

</body>
